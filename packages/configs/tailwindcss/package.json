{
  "name": "@relatos/config-tailwindcss",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Tailwind CSS configurations for the Relatos de Barrios monorepo",
  "main": "./postcss.config.mjs",
  "types": "./index.d.ts",
  "exports": {
    ".": "./shared-styles.css",
    "./postcss": {
      "types": "./index.d.ts",
      "default": "./postcss.config.mjs"
    }
  },
  "files": [
    "*.mjs",
    "*.css",
    "*.d.ts"
  ],
  "devDependencies": {
    "@relatos/config-typescript": "workspace:*",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4"
  }
}
