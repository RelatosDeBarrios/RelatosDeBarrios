{
  "name": "@relatos/content",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "description": "Shared content management package with business data, UI texts, team information, and brand content for the Relatos de Barrios monorepo",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "exports": {
    "./core": "./src/core/index.ts",
    "./rengifo": "./src/apps/rengifo/index.ts",
    "./hub": "./src/apps/hub/index.ts",
    "./covico": "./src/apps/covico/index.ts",
    "./ui": "./src/ui/index.ts"
  },
  "files": [
    "src/**/*"
  ],
  "devDependencies": {
    "@relatos/config-typescript": "workspace:*",
    "@relatos/config-eslint": "workspace:*",
    "eslint": "catalog:"
  }
}
